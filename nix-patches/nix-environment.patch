+void EnvironmentSetting::set(const std::string & str, bool append)
+{
+    if (! append) {
+        for (auto & [name, oldValue] : oldEnvironment) {
+            if (oldValue.has_value()) {
+                setenv(name.c_str(), oldValue->c_str(), 1);
+            } else {
+                unsetenv(name.c_str());
+            }
+        }
+        oldEnvironment.clear();
+        value.clear();
+        envNames.clear();
+        hasInherited = false;
+    }
+
+    StringMap newValues;
+
+    for (auto & elem : tokenizeString<Strings>(str)) {
+        size_t pos = elem.find('=');
+        if (pos == std::string::npos) {
+            // name
+            envNames.insert(elem);
+            auto envValue = getEnv(elem.c_str());
+            if (envValue.has_value()) {
+                newValues.insert_or_assign(elem, envValue.value());
+                hasInherited = true;
+                overridden = true;
+            }
+        } else {
+            // name=value
+            auto name = elem.substr(0, pos);
+            auto value = elem.substr(pos + 1);
+            envNames.insert(name);
+            newValues.insert_or_assign(name, value);
+        }
+    }
+
+    for (auto & [name, newValue] : newValues) {
+        oldEnvironment.emplace(name, getEnv(name));
+        setenv(name.c_str(), newValue.c_str(), 1);
+        value.insert_or_assign(name, newValue);
+    }
+}
+
+std::string EnvironmentSetting::to_string() const
+{
+    Strings kvstrs;
+    std::transform(envNames.begin(), envNames.end(), back_inserter(kvstrs),
+                   [this](auto name)
+                   {
+                       if (auto iter = value.find(name); iter != value.end())
+                           return name + "=" + iter->second;
+                       else
+                           return name;
+                   });
+    return concatStringsSep(" ", kvstrs);
+}
